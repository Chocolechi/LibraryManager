@model LibraryManager.Models.User
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<SelectListItem> typePerson = (List<SelectListItem>)ViewBag.typePerson; 

}


<div class="container">

    <div class="text-center">
        <h2 class="display-4">Create User</h2>
    </div>

    <div class="row m-5  p-4">
        <div class="col-sm-10 mx-auto">
            <form method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control bg-light" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Identification" class="control-label"></label>
                    <input asp-for="Identification" class="form-control bg-light" />
                    <span asp-validation-for="Identification" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LicenseNumber" class="control-label"></label>
                    <input asp-for="LicenseNumber" class="form-control bg-light" />
                    <span asp-validation-for="LicenseNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TypePerson" class="control-label"></label>
                    @Html.DropDownListFor(m => m.TypePersonId, typePerson, "Please select", new {@class="form-control"})
                    <span asp-validation-for="TypePerson" class="text-danger"></span>
                </div>
                
  

                <div class="form-group pt-5">
                    <input type="submit" value="Add" class="form-control btn btn-dark" />
                </div>
            </form>
        </div>
    </div>
</div>

