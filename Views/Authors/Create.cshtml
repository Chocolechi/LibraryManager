@model LibraryManager.Models.Author
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">

    <div class="text-center">
        <h2 class="display-4">Create Author</h2>
    </div>

    <div class="row m-5  p-4">
        <div class="col-sm-10 mx-auto">
            <form method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control bg-light" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Origin" class="control-label"></label>
                    <input asp-for="Origin" class="form-control bg-light" />
                    <span asp-validation-for="Origin" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MotherTongue" class="control-label"></label>
                    <input asp-for="MotherTongue" class="form-control bg-light" />
                    <span asp-validation-for="MotherTongue" class="text-danger"></span>
                </div>

  

                <div class="form-group pt-5">
                    <input type="submit" value="Add" class="form-control btn btn-dark" />
                </div>
            </form>
        </div>
    </div>
</div>

