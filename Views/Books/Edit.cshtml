@model LibraryManager.Models.Book

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> typePerson = (List<SelectListItem>)ViewBag.typePerson; 

}


<div class="container">

    <div class="text-center">
        <h2 class="display-4">Edit Science</h2>
    </div>

    <div class="row m-5 p-4">
        <div class="col-sm-10 mx-auto">
            <form method="post" asp-action="Edit">

                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control bg-light" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control bg-light" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ISBN" class="control-label"></label>
                    <input asp-for="ISBN" class="form-control bg-light" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BibliographyId" class="control-label"></label>
                    <input asp-for="BibliographyId" class="form-control bg-light" />
                    <span asp-validation-for="BibliographyId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AuthorId" class="control-label"></label>
                    <input asp-for="AuthorId" class="form-control bg-light" />
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EditorialId" class="control-label"></label>
                    <input asp-for="EditorialId" class="form-control bg-light" />
                    <span asp-validation-for="EditorialId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateReleased" class="control-label"></label>
                    <input asp-for="DateReleased" class="form-control" />
                    <span asp-validation-for="DateReleased" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ScienceId" class="control-label"></label>
                    @*<select name="science" class="form-control bg-light" asp-items="@ViewBag.science"></select>*@
                    @*@Html.DropDownListFor(m => m.ScienceId, science, "Please select", new {@class="form-control"})*@
                    <input asp-for="ScienceId" class="form-control" />
                    <span asp-validation-for="ScienceId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LanguageId" class="control-label"></label>
                    @*<select name="language" class="form-control bg-light" asp-items="@ViewBag.language"></select>*@
                    @*@Html.DropDownListFor(m => m.LanguageId, language, "Please select", new {@class="form-control"})*@
                    <input asp-for="LanguageId" class="form-control" />
                    <span asp-validation-for="LanguageId" class="text-danger"></span>
                </div>
  

                <div class="form-group pt-5">
                    <input type="submit" value="Save" class="form-control btn btn-dark" />
                </div>
            </form>
        </div>
    </div>
</div>

